<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/recyclerview_meeting"
    android:padding="8dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="8dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardBackgroundColor="@android:color/white">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMeetingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="Create This System"
                android:textSize="20sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFrequencyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/text_meeting_frequency"
                android:textSize="16sp"
                card_view:layout_constraintEnd_toStartOf="@+id/tvFrequency"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="High"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/tvFrequencyLabel"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvMeetingDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="24dp"
                android:text="@string/text_meeting_date"
                android:textSize="16sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMeetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="15/02/2018"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/tvMeetingDateLabel"
                card_view:layout_constraintStart_toEndOf="@+id/tvMeetingDateLabel" />

            <TextView
                android:id="@+id/tvMeetingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
